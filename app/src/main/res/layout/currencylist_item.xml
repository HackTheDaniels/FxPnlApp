<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#EEEEEE">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id = "@+id/RHE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,2,3,4"
        android:padding="5dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/posLabel"
                android:layout_column="1"
                android:text="POS"
                android:textSize="17dp"
                android:textColor="#000000"
                android:padding="3dip" />

            <TextView
                android:id="@+id/blank"
                android:layout_column="2"
                android:gravity="left"/>

            <TextView
                android:id="@+id/bookMktLabel"
                android:layout_column="3"
                android:text="Book/Market"
                android:textSize="17dp"
                android:textColor="#000000"
                android:padding="3dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/blank1"
                android:layout_column="4"
                android:gravity="left"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/posValue"
                android:layout_column="1"
                android:text="0"
                android:padding="3dip"
                android:textSize="17dp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imagePos"
                android:layout_column="2"
                android:src="@drawable/pos_icon"
                android:gravity="left"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/bookBidValue"
                android:layout_column="3"
                android:text="0"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/blank2"
                android:layout_column="4"
                android:gravity="left"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/posUSDValue"
                android:layout_column="1"
                android:text="0"
                android:padding="3dip"
                android:textSize="17dp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imageUSDPos"
                android:layout_column="2"
                android:src="@drawable/pos_usd_icon"
                android:gravity="left"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/marketBidValue"
                android:layout_column="3"
                android:text="0"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#000000"
                />

            <ImageView
                android:id="@+id/imageUSDPos1"
                android:layout_column="4"
                android:src="@drawable/flattenrisk"
                android:gravity="left"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
